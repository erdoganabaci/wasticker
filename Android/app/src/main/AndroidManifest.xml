<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.erdogan.turkiyestickers">

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/new_logo_licenced"
        android:label="@string/app_name"
        android:name="com.erdogan.turkiyestickers.StickerApplication"
        android:roundIcon="@mipmap/new_logo_licenced"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_id"/>
        <activity android:name="com.erdogan.turkiyestickers.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.erdogan.turkiyestickers.StickerPackListActivity"
            android:label="@string/title_activity_sticker_packs_list" />
        <activity
            android:name="com.erdogan.turkiyestickers.StickerPackDetailsActivity"
            android:parentActivityName="com.erdogan.turkiyestickers.StickerPackListActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erdogan.turkiyestickers.StickerPackListActivity" />
        </activity>
        <activity
            android:name="com.erdogan.turkiyestickers.StickerPackInfoActivity"
            android:label="@string/title_activity_sticker_pack_info"
            android:parentActivityName="com.erdogan.turkiyestickers.StickerPackDetailsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erdogan.turkiyestickers.StickerPackDetailsActivity" />
        </activity>

        <provider
            android:name="com.erdogan.turkiyestickers.StickerContentProvider"
            android:authorities="${contentProviderAuthority}"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.whatsapp.sticker.READ" />
    </application>
</manifest>
